{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('scss/reset-password.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header text-white text-center">
                        <h2>Password Reset Email Sent</h2>
                    </div>
                    <div class="card-body">
                        <p>
                            If an account matching your email exists, an email has been sent with a link to reset your
                            password.
                            This link will expire in
                            {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}
                            .
                        </p>
                        <p>
                            If you don't receive an email, please check your spam folder or
                            <a href="{{ path('app_forgot_password_request') }}" class="text-primary">try again</a>.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

